<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_simple_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="simpleactivity" />

            <Button
                android:id="@+id/btn_super_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="superactivity" />

            <Button
                android:id="@+id/btn_another_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="anotheractivity" />

            <Button
                android:id="@+id/btn_transform_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="transformactivity" />

            <Button
                android:id="@+id/btn_indicator_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="indicatoractivity" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
